<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".TripMainActivity">

    <RelativeLayout
        android:id="@+id/LL_trip_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtv_trip_city"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Город"
            android:layout_marginTop="15dp"
            android:textAlignment="gravity"
            android:textColor="@color/textDark"
            android:fontFamily="sans-serif-condensed"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="25dp"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/LL_trip_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingBottom="5dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="4dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edittxt_trip_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_weight="3"/>

            <ImageButton
                android:id="@+id/imgbtn_close_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@android:color/transparent"
                />
        </LinearLayout>

        <ListView
            android:id="@+id/listView_city"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginVertical="5dp"
            android:background="@android:color/white"
            >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textAlignment="gravity"
                    android:textColor="@color/textDark"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:text="Промежуток поиска" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:textColor="@color/textDark"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:hint="Дата"
                        android:text=""
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_dataChoose1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_gravity="center"
                        android:background="@drawable/small_blue_button"
                        android:clickable="true"
                        app:srcCompat="@android:drawable/ic_menu_today" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:textColor="@color/textDark"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:textColor="@color/textDark"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:hint="Дата"
                        android:text="10-12-2020"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_dataChoose2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/small_blue_button"
                        android:clickable="true"
                        app:srcCompat="@android:drawable/ic_menu_today" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textAlignment="gravity"
                    android:textColor="@color/textDark"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:text="Даипазон цен" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:textColor="@color/textDark"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:hint="Цена"
                        android:text=""
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_priceChoose1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/small_blue_button"
                        android:clickable="true"
                        app:srcCompat="@android:drawable/ic_menu_edit"  />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:textColor="@color/textDark"
                    android:fontFamily="sans-serif-condensed"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:textColor="@color/textDark"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center"
                        android:hint="Цена"
                        android:text=""
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/btn_priceChoose2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/small_blue_button"
                        android:clickable="true"
                        app:srcCompat="@android:drawable/ic_menu_edit" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_search_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/small_blue_button"
            android:layout_marginHorizontal="20dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:text="Поиск" />

    </LinearLayout>

        <Button
            android:id="@+id/btn_to_avia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/small_blue_button"
            android:fontFamily="sans-serif-condensed"
            android:paddingHorizontal="10dp"
            android:text="Авиабилеты"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!--        <Button-->
<!--            android:id="@+id/btn_fill"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:background="@drawable/small_blue_button"-->
<!--            android:layout_marginHorizontal="20dp"-->
<!--            android:textColor="@android:color/white"-->
<!--            android:textSize="20sp"-->
<!--            android:fontFamily="sans-serif-condensed"-->
<!--            android:text="fill" />-->




    </RelativeLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/search_gifview"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="200dp"
        android:visibility="gone"
        android:background="@drawable/searching_tickets"
        />

</LinearLayout>