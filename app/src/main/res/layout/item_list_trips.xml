<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="7dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_hotel"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_item_main"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:layout_marginStart="4dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/textDark"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LL_hotel_delete"
            android:paddingVertical="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/small_blue_button"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-condensed"
                android:text="УДАЛИТЬ"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/btn_delete"
                android:background="@android:color/transparent"
                android:layout_weight="4"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_hotel_browser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="13dp"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:background="@drawable/small_blue_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btntobrower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-condensed"
                android:text="ОТКРЫТЬ"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/btn_browser"
                android:layout_marginEnd="7dp"
                android:background="@android:color/transparent"
                android:layout_weight="4"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
